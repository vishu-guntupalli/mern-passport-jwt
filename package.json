    "js-cookie": "^2.2.1",
    "mongoose": "^5.3.16",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  }
